<h1>My Wallets</h1>
<%= link_to "New Wallet", new_wallet_path, class: "btn btn-sm btn-primary"%>
<br />

<% if @wallets.size > 0 %>
<div class="wallets_table">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Wallet</th>
            <th>Cash Value</th>
            <th>BTC Value</th>
          </tr>
        </thead>
        <tbody>
         <% @wallets.each do | wallet | %>
          <tr>
            <td><%= link_to wallet.name, wallet_path(wallet) %></td>
            <td><%= formatted_price wallet.cash_value %> </td>
            <td><%= formatted_price wallet.btc_value %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<% else %>
  You have no wallets!
<% end %>
