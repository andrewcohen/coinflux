<% if flash[:success].present? %>
  <div class='alert alert-info alert-dismissable'>
    <button type="button" class="close" data-dismiss="alert" >&times;</button>
    <%= flash[:success] %>
  </div>
<% end %>

<% if flash[:error].present? %>
  <div class='alert alert-danger alert-dismissable'>
    <button type="button" class="close" data-dismiss="alert" >&times;</button>
    <%= flash[:error] %>
  </div>
<% end %>
